@model CoreLayer.ViewModel.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "ورود";
}

<!doctype html>
<html lang="fa" dir="rtl">

<head>
    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Sash – Bootstrap 5  Admin &amp; Dashboard Template">
    <meta name="author" content="Spruko Technologies Private Limited">
    <meta name="keywords" content="admin,admin dashboard,admin panel,admin template,bootstrap,clean,dashboard,flat,jquery,modern,responsive,premium admin templates,responsive admin,ui,ui kit.">

    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="/AdminTamplate/images/brand/favicon.ico">

    <!-- TITLE -->
    <title>@ViewBag.Title</title>

    <!-- BOOTSTRAP CSS -->

    <link id="style" href="/AdminTamplate/plugins/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet">

    <link id="style" href="/AdminTamplate/plugins/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link id="style" href="/AdminTamplate/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- STYLE CSS -->
    <link href="/AdminTamplate/css/style.css" rel="stylesheet">
    <link href="/AdminTamplate/css/dark-style.css" rel="stylesheet">
    <link href="/AdminTamplate/css/transparent-style.css" rel="stylesheet">
    <link href="/AdminTamplate/css/skin-modes.css" rel="stylesheet">

    <!--- FONT-ICONS CSS -->
    <link href="/AdminTamplate/css/icons.css" rel="stylesheet">

    <!-- COLOR SKIN CSS -->
    <link id="theme" rel="stylesheet" type="text/css" media="all" href="/AdminTamplate/colors/color1.css">

    <link href="/AdminTamplate/font/vazir/Vazirmatn-UI-font-face.css" rel="stylesheet">

    <link href="/AdminTamplate/font/vazir/Vazirmatn-UI-font-face.css" rel="stylesheet">
    <!-- TOASTER -->
    <link href="/AdminTamplate/plugins/tost/toastr.css" rel="stylesheet">
    
    <style>
        .mySpanValidation {
            color: crimson
        }
    </style>

</head>

<body class="app sidebar-mini ltr login-img">

    <!-- BACKGROUND-IMAGE -->
    <div class="">

        <!-- GLOABAL LOADER -->
        <div id="global-loader">
            <img src="/AdminTamplate/images/loader.svg" class="loader-img" alt="Loader">
        </div>
        <!-- /GLOABAL LOADER -->
        <!-- PAGE -->
        <div class="page">
            <div class="">

                <!-- CONTAINER OPEN -->
                <div class="col col-login mx-auto mt-7">
                    <div class="text-center">
                        <a href="index.html"><img src="/AdminTamplate/images/brand/logo-white.png" class="header-brand-img" alt=""></a>
                    </div>
                </div>

                <div class="container-login100">
                    <div class="wrap-login100 p-6">
                        <form asp-action="Login" method="post" class="login100-form validate-form">

                            <input asp-for="BackPage" type="hidden"/>

                            <span class="login100-form-title pb-5">
                                ورود
                            </span>
                            <div class="panel panel-primary">

                                <div class="panel-body tabs-menu-body p-0 pt-5">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab5">

                                            <div style="text-align: end;">
                                                <label asp-for="NumberPhone"></label>
                                                <div class="wrap-input100 validate-input input-group" data-bs-validate="Valid email is required: ex@abc.xyz">
                                                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                        <i class="fa fa-phone text-muted" aria-hidden="true"></i>
                                                    </a>
                                                    <input class="input100 form-control ms-0" asp-for="NumberPhone">
                                                </div>
                                                <span class="mySpanValidation" asp-validation-for="NumberPhone"></span>

                                                <br/>

                                                <label asp-for="Password"></label>
                                                <div class="wrap-input100 validate-input input-group" id="Password-toggle">
                                                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                        <i class="zmdi zmdi-eye text-muted" aria-hidden="true"></i>
                                                    </a>
                                                    <input class="input100 form-control ms-0" asp-for="Password" type="password">
                                                </div>
                                                <span class="mySpanValidation" asp-validation-for="Password"></span>
                                            </div>

                                            <div class="custom-controls-stacked">
                                                <label class="custom-control custom-checkbox">
                                                    <input asp-for="IsLogin" type="checkbox" class="custom-control-input" checked="checked" value="true">
                                                    <label asp-for="IsLogin" class="custom-control-label"></label>
                                                </label>
                                            </div>

                                            <div class="container-login100-form-btn">
                                                <button type="submit" class="w-100 btn btn-outline-success">
                                                    ورود
                                                </button>

                                                <a style="margin-top: 5px" href="/" class="w-100 btn btn-outline-danger">
                                                    صفحه اصلی
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- CONTAINER CLOSED -->
            </div>
        </div>
        <!-- End PAGE -->

    </div>
    <!-- BACKGROUND-IMAGE CLOSED -->
    <!-- JQUERY JS -->
    <script src="/AdminTamplate/js/jquery.min.js"></script>

    <!-- BOOTSTRAP JS -->
    <script src="/AdminTamplate/plugins/bootstrap/js/popper.min.js"></script>
    <script src="/AdminTamplate/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- SHOW PASSWORD JS -->
    <script src="/AdminTamplate/js/show-password.min.js"></script>

    <!-- GENERATE OTP JS -->
    <script src="/AdminTamplate/js/generate-otp.js"></script>

    <!-- Perfect SCROLLBAR JS-->
    <script src="/AdminTamplate/plugins/p-scroll/perfect-scrollbar.js"></script>

    <!-- Color Theme js -->
    <script src="/AdminTamplate/js/themeColors.js"></script>

    <!-- CUSTOM JS -->
    <script src="/AdminTamplate/js/custom.js"></script>


    <script src="/jquery.validate.min.js"></script>
    <script src="/jquery.validate.unobtrusive.min.js"></script>



</body>

</html>